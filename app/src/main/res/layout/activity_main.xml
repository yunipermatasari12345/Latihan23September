<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    Se<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            app:srcCompat="@drawable/logo_pnp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Selamat Datang di Politeknik Negeri Padang"
        android:textAlignment="center"
        android:textColor="#F16622"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Limau Manih,Padang,Sumbar"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnMI"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="#F16622"
        android:text="Manajemen Informatika"
        app:cornerRadius="0sp" />

    <Button
        android:id="@+id/btnTK"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#F16622"
        android:text="Teknik Komputer"
        app:cornerRadius="0sp" />

    <Button
        android:id="@+id/btnGP"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#F16622"
        android:text="Galery Photo"
        app:cornerRadius="0sp" />
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>